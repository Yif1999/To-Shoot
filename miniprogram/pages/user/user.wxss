.user_wrap {
  background-color: white;
  border-radius: 15rpx;
  margin: 30rpx 20rpx 0rpx 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_wrap .avatar {
  flex: 1;
  height: auto;
  margin-left: 10rpx;
  margin-right: 30rpx;
  padding: 20rpx;
  border-radius: 100rpx;
  border: 2rpx solid #f3f3f3;
  background-color: white;
}
.user_wrap .name {
  flex: 8;
  font-weight: bold;
}
.user_wrap .arrow {
  flex: 1;
}
.list_wrap {
  margin: 30rpx 20rpx 0rpx 20rpx;
  border-radius: 15rpx;
  background-color: #fff;
}
.list_wrap .list {
  padding: 22rpx 30rpx 22rpx 22rpx;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
}
.list_wrap .list:first-child {
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.list_wrap .list:last-child {
  border-bottom: 0rpx solid white;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}
.list_wrap .list .content {
  flex: 1;
  font-size: 30rpx;
  padding-left: 18rpx ;
}
.list_wrap .list .arrow {
  flex: 1;
}
.tap {
  background-color: #fafafa;
}
.svg_wrap {
  display: flex;
  justify-content: center;
}
.svg_wrap .no_data {
  padding-top: 150rpx;
  width: 25%;
}
