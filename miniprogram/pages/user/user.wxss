page {
  padding-bottom: 35px;
}
.user_wrap {
  background-color: white;
  border-radius: 7px;
  margin: 15px 10px 0px 10px;
  padding: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_wrap .avatar {
  width: 55px;
  margin-left: 5px;
  margin-right: 15px;
  border-radius: 50px;
  background-color: white;
}
.user_wrap .name {
  flex: 8;
  font-weight: bold;
  font-size: 15px;
}
.user_wrap .arrow {
  flex: 1;
}
.list_wrap {
  margin: 15px 10px 0px 10px;
  border-radius: 7px;
  background-color: #fff;
}
.list_wrap .list {
  padding: 11px 15px 11px 11px;
  display: flex;
  border-bottom: 0.5px solid #f5f5f5;
}
.list_wrap .list:first-child {
  border-top-left-radius: 7px;
  border-top-right-radius: 7px;
}
.list_wrap .list:last-child {
  border-bottom: 0px solid white;
  border-bottom-left-radius: 7px;
  border-bottom-right-radius: 7px;
}
.list_wrap .list .content {
  flex: 1;
  font-size: 15px;
  padding-left: 9px ;
}
.list_wrap .list .arrow {
  flex: 1;
}
.tap {
  background-color: #fafafa;
}
.wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.wrap .block {
  display: flex;
  flex-direction: column;
  width: 300px;
  background-color: #fff;
  border-radius: 5px;
}
.wrap .block .text {
  font-size: large;
  flex: 1;
  margin: 40px 0 25px 0;
  text-align: center;
}
.wrap .block .button {
  flex: 1;
}
