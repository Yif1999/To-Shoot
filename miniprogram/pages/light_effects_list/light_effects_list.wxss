.wrap {
  color: #333333;
  background-color: white;
  border-radius: 17rpx;
  margin: 50rpx 40rpx 0rpx 40rpx;
  box-shadow: 8rpx 8rpx 16rpx -10rpx rgba(0, 0, 0, 0.02);
}
.wrap .title {
  display: flex;
  margin: 0 30rpx 0 30rpx;
  padding: 20rpx 0 15rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
  align-items: center;
}
.wrap .title .icon {
  height: auto;
  width: 38rpx;
  background-color: #f3f3f3;
  border-radius: 50rpx;
  padding: 8rpx;
  margin-right: 10rpx;
}
.wrap .title .name {
  font-size: 30rpx;
}
.wrap .list {
  display: flex;
  margin: 0rpx 20rpx 0rpx 20rpx;
}
.wrap .list .button {
  padding: 15rpx;
  flex: 1;
  font-size: 29rpx;
  text-align: center;
  border: 10rpx solid white;
}

.tap{
  background-color: rgb(248, 248, 248);
  border-radius: 20rpx;
}

.text {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 30px;
  text-align: center;
  font-size: small;
  color: #ccc;
}
