.wrap {
  color: #333333;
  background-color: white;
  border-radius: 8px;
  margin: 25px 20px 0px 20px;
  box-shadow: 4px 4px 8px -5px rgba(0, 0, 0, 0.01);
}
.wrap .title {
  display: flex;
  margin: 0 15px 0 15px;
  padding: 10px 0 7px 0;
  border-bottom: 1px solid #f1f1f1;
  align-items: center;
}
.wrap .title .icon {
  height: auto;
  width: 19px;
  background-color: #f3f3f3;
  border-radius: 25px;
  padding: 8rpx;
  margin-right: 5px;
}
.wrap .title .name {
  font-size: 15px;
}
.wrap .list {
  display: flex;
  margin: 0px 10px 0rx 10px;
}
.wrap .list .button {
  padding: 10px;
  flex: 1;
  font-size: 15px;
  text-align: center;
}
.tap{
  background-color: rgb(248, 248, 248);
  border-radius: 20rpx;
}

.text {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 30px;
  text-align: center;
  font-size: small;
  color: #ccc;
}

